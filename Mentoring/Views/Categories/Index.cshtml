@using Mentoring.BL
@using Mentoring.Controllers

@model IEnumerable<Mentoring.Models.Category>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                        @{
                            string base64 = string.Empty;
                            var correctArray = new List<byte>();
                            var categoryId = item.CategoryId;
                            //var imageByteArray = GetImageById(item.CategoryId);
                            var imageArray = item.Picture;
                            if (imageArray != null)
                            {
                                correctArray = imageArray.ToList();
                                base64 = Convert.ToBase64String(correctArray.ToArray());
                            }
                            if (!string.IsNullOrEmpty(base64))
                            {
                                <img src="data:image/bmp;base64,@base64"/>
                            }
                            else
                            {
                                <div>No image available</div>
                            }
                        }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CategoryId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
